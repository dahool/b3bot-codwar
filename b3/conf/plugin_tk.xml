<configuration plugin="tk">
	<settings name="settings">
		<set name="max_points">400</set>
		<set name="levels">0,1,2,20</set>
		<set name="round_grace">7</set>
		<set name="issue_warning">sfire</set>
		<set name="grudge_enable">True</set>
		<set name="grudge_level">2</set>
		<set name="private_messages">True</set>
        <set name="autoforgive_level">2</set>
        <set name="autoforgive_points">0.5</set>
        <set name="forgive_delay">60</set>
	</settings>
	<settings name="messages">
		<set name="ban">^7demasiados team kill</set>
		<set name="forgive">^7$vname^7 perdona a $aname (^3$points^7)</set>
        <set name="forgive_guest">^7$vname^7 perdona a $aname (^3$points^7). Por ser invitado solo se reducen los puntos a la mitad.</set>
		<set name="grudged">^7$vname^7 tiene ^1rencor ^7contra $aname (^3$points^7)</set>
		<set name="forgive_many">^7$vname^7 perdono $attackers</set>
		<set name="forgive_warning">^1ATENCION^7: $name^7 auto-kick si no es perdonado. Escribe ^3!forgive $cid ^7para perdonar. (^3puntos: $points^7)</set>
		<set name="no_forgive">^7nadie a quien perdonar</set>
		<set name="players">^7Perdonar a quien? %s</set>
		<set name="forgive_info">^7$name^7 tiene ^3$points^7 puntos por TK</set>
		<set name="grudge_info">^7$name^7 tiene ^3$points^7 por TK por ^1rencor</set>
		<set name="forgive_clear">^7$name^7 ^3$points^7 puntos por TK limpiados</set>
        <set name="forgive_auto">^7$aname autoperdonado por matar a $vname</set>
	</settings>
	<settings name="level_0">
		<set name="kill_multiplier">2</set>
		<set name="damage_multiplier">1</set>
		<set name="ban_length">5</set>
	</settings>
	<settings name="level_1">
		<set name="kill_multiplier">1</set>
		<set name="damage_multiplier">1</set>
		<set name="ban_length">2</set>
	</settings>
	<settings name="level_2">
		<set name="kill_multiplier">1</set>
		<set name="damage_multiplier">0.5</set>
		<set name="ban_length">1</set>
	</settings>
	<settings name="level_20">
		<set name="kill_multiplier">0.5</set>
		<set name="damage_multiplier">0.5</set>
		<set name="ban_length">0</set>
	</settings>
</configuration>
